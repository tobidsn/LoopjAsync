<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/foto_karyawan"
        android:layout_alignParentLeft="true"
        android:contentDescription="gambar"
        android:padding="2dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nama_karyawan"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/foto_karyawan"
        android:padding="2dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/email_karyawan"
        android:layout_below="@+id/nama_karyawan"
        android:layout_toRightOf="@+id/foto_karyawan"
        android:padding="2dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/alamat_karyawan"
        android:layout_below="@+id/email_karyawan"
        android:layout_toRightOf="@+id/foto_karyawan"
        android:padding="2dp" />


</RelativeLayout>
